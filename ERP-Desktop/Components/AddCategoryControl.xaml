<UserControl x:Class="ERP_Desktop.Components.AddCategoryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ERP_Desktop.Components"
             mc:Ignorable="d" 
             xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro">
    <Grid>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,10" >
            <TextBox x:Name="txtCategoryCode" Width="200" Margin="10"
                 mah:TextBoxHelper.Watermark="Enter Category Code"/>
            <TextBox x:Name="txtCategoryName" Width="200" Margin="10"
                 mah:TextBoxHelper.Watermark="Enter Category Name"/>
            <Button Content="Save" Width="200" HorizontalAlignment="Left" Margin="10" Click="AddCategory" x:Name="AddCategoryButton"/>
        </StackPanel>
    </Grid>
</UserControl>
